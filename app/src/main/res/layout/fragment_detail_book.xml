<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.ucuenca.ucmobile.librarycatalog.DetailBook$PlaceholderFragment">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TextView android:layout_width="wrap_content"
            android:id="@+id/detail_text_book"
            android:layout_height="wrap_content" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.05" >

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >

                <TextView
                    android:id="@+id/item_title_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:text="Título"/>

                <TextView
                    android:id="@+id/item_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:textColor="#ff2f2f2f"
                    android:layout_below="@+id/item_title_label"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >

                <TextView
                    android:id="@+id/item_autor_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:text="Autor:"/>

                <TextView
                    android:id="@+id/item_autor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Large Text"
                    android:layout_column="2"
                    android:textColor="#ff2f2f2f"
                    android:layout_below="@+id/item_autor_label"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >

                <TextView
                    android:id="@+id/item_lugarp_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lugar de publicación"
                    android:layout_column="1"/>

                <TextView
                    android:id="@+id/item_lugarp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Large Text"
                    android:layout_column="2"
                    android:textColor="#ff2f2f2f"
                    android:layout_below="@+id/item_lugarp_label"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >

                <TextView
                    android:id="@+id/item_fechap_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:text="Fecha de publicación" />

                <TextView
                    android:id="@+id/item_fechap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Large Text"
                    android:layout_column="2"
                    android:textColor="#ff2f2f2f"
                    android:layout_below="@+id/item_fechap_label"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >

                <TextView
                    android:id="@+id/item_dimensiones_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:text="Dimensiones:" />

                <TextView
                    android:id="@+id/item_dimensiones"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Large Text"
                    android:layout_column="2"
                    android:textColor="#ff2f2f2f"
                    android:layout_below="@+id/item_dimensiones_label"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >

                <TextView
                    android:id="@+id/item_descripcion_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:text="Descripcion:" />

                <TextView
                    android:id="@+id/item_descripcion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Large Text"
                    android:layout_column="2"
                    android:textColor="#ff2f2f2f"
                    android:layout_below="@+id/item_descripcion_label"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >

                <TextView
                    android:id="@+id/item_paginas_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:text="Número de páginas:" />

                <TextView
                    android:id="@+id/item_paginas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Large Text"
                    android:layout_column="2"
                    android:textColor="#ff2f2f2f"
                    android:layout_below="@+id/item_paginas_label"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
            </TableRow>
        </TableLayout>


    </LinearLayout>


</RelativeLayout>
